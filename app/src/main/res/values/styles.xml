<resources>

    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="material_drawer_selected_text">@color/accent</item>

        <item name="colorButtonNormal">@color/primary_color</item>

        <item name="android:fastScrollThumbDrawable">@drawable/indigotheme_fastscroll_thumb_holo</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FilesTheme" parent="AppTheme">
    </style>

    <style name="WhiteTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="RecyclerView">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/padding_recycler_bottom</item>
        <item name="android:paddingTop">@dimen/padding_recycler_top</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="RecyclerViewWithdFab" parent="RecyclerView">
        <item name="android:paddingBottom">@dimen/padding_recycler_bottom_with_fab</item>
    </style>

    <style name="RecyclerViewWithCards" parent="RecyclerView">
        <item name="android:background">@color/md_grey_200</item>
        <item name="android:paddingLeft">@dimen/padding_recycler_left</item>
        <item name="android:paddingRight">@dimen/padding_recycler_right</item>
    </style>

    <style name="RecyclerViewWithCardsAndFab" parent="RecyclerViewWithCards">
        <item name="android:paddingBottom">@dimen/padding_recycler_bottom_with_fab</item>
    </style>

    <style name="PrimaryText" >
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
    </style>

    <style name="PrimaryBigText" >
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/size_text_primary_big</item>
    </style>

    <style name="SecondaryText" >
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
    </style>

    <style name="PrimaryTextInvert" >
        <item name="android:textColor">@color/primary_text_invert</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
    </style>

    <style name="SecondaryTextInvert" >
        <item name="android:textColor">@color/secondary_text_invert</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
    </style>

    <style name="EmptyText" parent="SecondaryText">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/padding_empty_drawable</item>
    </style>

    <style name="TotalText" parent="SecondaryText">
        <item name="android:textColor">@color/primary_text_invert</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="InputDescText" parent="SecondaryText">
        <item name="android:textSize">@dimen/size_text_input_desc</item>
    </style>

    <style name="HeaderText" parent="PrimaryText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ThreeLineLayout" >
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="RaisedButton" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FlatButton" >
        <item name="android:background">@drawable/list_selector_foreground</item>
    </style>


    <style name="CardStyle">
        <item name="android:layout_marginLeft">@dimen/margin_card</item>
        <item name="android:layout_marginRight">@dimen/margin_card</item>
        <item name="android:layout_marginBottom">@dimen/margin_top_bottom_card_of_api_version</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom_card_of_api_version</item>

        <item name="android:background">@android:color/white</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>
