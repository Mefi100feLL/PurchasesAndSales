<resources>

    <style name="AppTheme.Launcher">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="BaseAppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="buttonsBackground">@drawable/background_button</item>
        <item name="itemsBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="BaseAppTheme.Dark" parent="MaterialDrawerTheme">
        <item name="buttonsBackground">@drawable/background_button</item>
        <item name="itemsBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

        <item name="android:fastScrollThumbDrawable">@drawable/indigotheme_fastscroll_thumb_holo</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="mcab_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="dividerColor">@color/divider</item>
        <item name="windowBackground">?attr/material_drawer_background</item>
        <item name="cardBackground">?attr/colorBackgroundFloating</item>

        <item name="overflowIcon">@drawable/ic_more_vert_grey600_24dp</item>
        <item name="editIcon">@drawable/ic_create_grey_24dp</item>
        <item name="removeIcon">@drawable/ic_delete_grey_24dp</item>
        <item name="shareIcon">@drawable/ic_share_grey_24dp</item>
        <item name="scaleIcon">@drawable/scale</item>
        <item name="currencyRubIcon">@drawable/currency_rub</item>
        <item name="weightKilogramIcon">@drawable/weight_kilogram</item>
        <item name="tagIcon">@drawable/tag</item>
        <item name="storeMallDirectoryIcon">@drawable/ic_store_mall_directory_24dp</item>
        <item name="calendarIcon">@drawable/ic_calendar_grey600_24dp</item>
        <item name="minusIcon">@drawable/ic_remove_grey600_24dp</item>
        <item name="plusIcon">@drawable/ic_add_grey600_24dp</item>
    </style>

    <style name="AppTheme.Dark" parent="BaseAppTheme.Dark">
        <item name="android:fastScrollThumbDrawable">@drawable/indigotheme_fastscroll_thumb_holo</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="mcab_popup_theme">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="android:textColorPrimary">@color/primary_text_invert</item>
        <item name="android:textColorSecondary">@color/secondary_text_invert</item>

        <item name="dividerColor">@color/divider_invert</item>
        <item name="windowBackground">?attr/material_drawer_background</item>
        <item name="cardBackground">?attr/colorBackgroundFloating</item>

        <item name="overflowIcon">@drawable/ic_more_vert_white_24dp</item>
        <item name="editIcon">@drawable/ic_create_white_24dp</item>
        <item name="removeIcon">@drawable/ic_delete_white_24dp</item>
        <item name="shareIcon">@drawable/ic_share_white_24dp</item>
        <item name="scaleIcon">@drawable/ic_scale_white_24dp</item>
        <item name="currencyRubIcon">@drawable/ic_currency_rub_white_24dp</item>
        <item name="weightKilogramIcon">@drawable/ic_weight_kilogram_white_24dp</item>
        <item name="tagIcon">@drawable/ic_tag_white_24dp</item>
        <item name="storeMallDirectoryIcon">@drawable/ic_store_mall_directory_white_24dp</item>
        <item name="calendarIcon">@drawable/ic_calendar_white_24dp</item>
        <item name="minusIcon">@drawable/ic_remove_white_24dp</item>
        <item name="plusIcon">@drawable/ic_add_white_24dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="FilesTheme" parent="AppTheme">
    </style>

    <style name="WhiteTheme" >
        <!--<item name="colorAccent">@android:color/white</item>-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <!--<item name="colorControlHighlight">@android:color/white</item>-->
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="RecyclerView">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/padding_recycler_bottom</item>
        <item name="android:paddingTop">@dimen/padding_recycler_top</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="RecyclerViewWithdFab" parent="RecyclerView">
        <item name="android:paddingBottom">@dimen/padding_recycler_bottom_with_fab</item>
    </style>

    <style name="RecyclerViewWithCards" parent="RecyclerView">
        <!--<item name="android:background">@color/md_grey_200</item>-->
        <item name="android:paddingLeft">@dimen/padding_recycler_left</item>
        <item name="android:paddingRight">@dimen/padding_recycler_right</item>
    </style>

    <style name="RecyclerViewWithCardsAndFab" parent="RecyclerViewWithCards">
        <item name="android:paddingBottom">@dimen/padding_recycler_bottom_with_fab</item>
    </style>

    <style name="PrimaryText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <!--<item name="android:textSize">@dimen/size_text_primary</item>-->
    </style>

    <style name="PrimaryBigText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/size_text_primary_big</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <!--<item name="android:textSize">@dimen/size_text_secondary</item>-->
    </style>

    <style name="PrimaryTextInvert">
        <item name="android:textColor">@color/primary_text_invert</item>
        <item name="android:textSize">@dimen/size_text_primary</item>
    </style>

    <style name="SecondaryTextInvert">
        <item name="android:textColor">@color/secondary_text_invert</item>
        <item name="android:textSize">@dimen/size_text_secondary</item>
    </style>

    <style name="EmptyText" parent="SecondaryText">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/padding_empty_drawable</item>
    </style>

    <style name="TotalText" parent="SecondaryText">
        <item name="android:textColor">@color/primary_text_invert</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="InputDescText" parent="SecondaryText">
        <item name="android:textSize">@dimen/size_text_input_desc</item>
    </style>

    <style name="HeaderText" parent="PrimaryText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_list_items</item>
        <item name="android:paddingRight">@dimen/padding_list_items</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ThreeLineLayout">
        <item name="android:background">?attr/itemsBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_list_items</item>
        <item name="android:paddingRight">@dimen/padding_list_items</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="RaisedButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FlatButton">
        <item name="android:background">@drawable/list_selector_foreground</item>
    </style>


    <style name="CardStyle">
        <item name="android:layout_marginLeft">@dimen/margin_card</item>
        <item name="android:layout_marginRight">@dimen/margin_card</item>
        <item name="android:layout_marginBottom">@dimen/margin_top_bottom_card_of_api_version</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom_card_of_api_version</item>

        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ToolbarStyleForSize">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

    </style>

</resources>
